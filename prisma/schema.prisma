// Prisma schema for Wish List Portal
// MySQL database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  wishes    Wish[]
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model Wish {
  id          Int      @id @default(autoincrement())
  productName String
  productLink String
  description String?
  purchased   Boolean  @default(false)
  purchasedBy Int?
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime @default(now())
}
